upstream gnindex-api {
    server index-api.globalnames.org;
}

server {
  listen 3000;

  location /api {
    expires off;
    add_header Cache-Control private;
    keepalive_timeout 0;
    proxy_set_header Host index-api.globalnames.org;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_pass http://gnindex-api/api;
  }

  location / {
    expires off;
    add_header Cache-Control private;
    keepalive_timeout 0;

    root /opt/app/;
  }
}
